<main>
  <div class="edit_screen_box">
    <a href="/members/<%= @member.id %>"><i class="fas fa-angle-double-left"></i> Back to Member profile</a>
<h2> Edit member</h2>
    <form method="POST" action="/members/<%= @member.id %>">

      <div class ="form_item">
        <label for="first-name">First name:</label>
        <input type="text" name="first_name" id="first-name" value="<%= @member.first_name %>">
      </div>

      <div class ="form_item">
        <label for="last-name">Last name:</label>
        <input type="text" name="last_name" id="last-name" value="<%= @member.last_name %>">
      </div>

      <div class ="form_item">
        <label for="age">Age:</label>
        <input type="number" min="16" name="age" id="age" value="<%= @member.age %>">
      </div>

      <div class ="form_item">
        <label for="membership-type">Membership_type:</label>
        <select id="membership-type" name="membership_tier_id">
          <% @membership_tiers.each do | tier | %>
          <option value ="<%= tier.id %>" <%= "selected" if @member.membership_tier_id == tier.id %>><%= tier.name %></option>
          <% end %>
        </select>
      </div>

      <div class ="form_item">
        <input type="submit" value="Update Member">
      </div>

    </form>

  </div>

</main>
