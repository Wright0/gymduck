<main>
  <h1>Profile page</h1>

  <div class="member_profile">

    <div>
      <img src="/images/default-member-icon.png" alt="Member photo icon">
    </div>

    <div>
      <p class="bold">Name: <%= @member.join_name() %></p>
      <p class="bold">Age: <%= @member.age %></p>
      <p class="bold">Membership Type: <%= @member.membership_tier_name() %></p>
      <p class="bold">Membership Status: <%= @member.membership_status %></p>
    </div>

    <div>
      <a href="/members/<%= @member.id %>/edit"><i class="fas fa-user-edit"></i> Edit</a>
      <form  method="POST" action="/members/<%= @member.id %>/change-status">
        <input type="submit" value="Change member status">
      </form>
      </div>

    </div>
    <div>
      <table>
        <p>Booked lessons:</p>
        <tr>
          <th>Lesson</th>
          <th>Date</th>
          <th>Time</th>
          <th>Delete</th>
        </tr>
        <% @booked_lessons.each do | lesson | %>
        <tr>
          <td><%= lesson.name %></td>
          <td><%= lesson.date %></td>
          <td><%= lesson.time %></td>
          <td><form method="POST" action="/members/<%= @member.id %>/<%= lesson.id %>/delete">
              <button type="submit" value="Remove"><i class="fas fa-trash-alt"></i></button>
            </form></td>
        </tr>
        <% end %>
      </table>

      <a href="/lessons">+ Add new lesson</a>
    </div>

  </main>
