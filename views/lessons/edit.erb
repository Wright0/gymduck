<main>

  <div class="edit_screen_box">
    <a href="/lessons"><i class="fas fa-angle-double-left"></i> Back to lesson ist</a>
    <h2>Edit lesson information</h2>
    <form method="POST" action="/lessons/<%= @lesson.id %>">

      <div class ="form_item">
        <label for="name">Lesson name:</label>
        <input type="text" name="name" id = "name" value="<%= @lesson.name %>">
      </div>

      <div class ="form_item">
        <label for="lesson-type">Lesson:</label>
        <select id="lesson-type" name="lesson_tier_id">
          <% @membership_tiers.each do | tier | %>
          <option value ="<%= tier.id %>" <%= "selected" if @lesson.lesson_tier_id == tier.id %>><%= tier.name %></option>
          <% end %>
        </select>
      </div>

      <div class ="form_item">
        <label for="date">Lesson day:</label>
        <input type="text" name="date" id="date" value="<%= @lesson.date %>">
      </div>

      <div class ="form_item">
        <label for="time">Lesson time:</label>
        <input type="text" name="time" id="time" value="<%= @lesson.time %>">
      </div>

      <div class ="form_item">
        <input type="submit" value="Update Lesson">
      </div>
    </form>
  </div>
</main>
